{
    "manifest_version": 2,
    "name": "cryptocoin-chrome-extension",
    "description": "CryptoCoin Chrome Extension",
    "version": "0.0.1",
    "author": "mamanogit",
    "content_security_policy" : "script-src 'self' https://ajax.googleapis.com;      object-src 'self'",
    "browser_action": {
      "default_title": "",
      "default_popup": "main.html"
    },
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "all_frames": true,
        "js": [
          "assets/js/main.js"
        ]
      }
    ],
    "permissions": [
    "tabs",
    "notifications",
    "http://*/",
    "https://*/",
    "https://files.coinmarketcap.com",
    "https://ajax.googleapis.com/"
    ]
  }